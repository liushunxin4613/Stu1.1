<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/liearn_day"
            style="@style/item_with_icon_style"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_check_everyday"
                android:contentDescription="@string/image_string" />

            <TextView
                android:id="@+id/tv_day"
                style="@style/mid_black_textstyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_weight="1"
                android:text="@string/day" />

            <ImageView
                android:id="@+id/icon_check_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_dot"
                android:contentDescription="@string/image_string"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            style="@style/item_line_style"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <LinearLayout
            android:id="@+id/liearn_near"
            style="@style/item_with_icon_style"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_nearby"
                android:contentDescription="@string/image_string" />

            <TextView
                android:id="@+id/tv_near"
                style="@style/mid_black_textstyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_weight="1"
                android:text="@string/near" />

            <ImageView
                android:id="@+id/icon_nearby_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_dot"
                android:contentDescription="@string/image_string" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/liearn_shave"
            style="@style/item_with_icon_style"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_shave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_shack"
                android:contentDescription="@string/image_string" />

            <TextView
                android:id="@+id/tv_shave"
                style="@style/mid_black_textstyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_weight="1"
                android:text="@string/shave" />

            <ImageView
                android:id="@+id/icon_shack_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_dot"
                android:contentDescription="@string/image_string"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            style="@style/item_line_style"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <LinearLayout
            android:id="@+id/liearn_share"
            style="@style/item_with_icon_style"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_share"
                android:contentDescription="@string/image_string" />

            <TextView
                android:id="@+id/tv_share"
                style="@style/mid_black_textstyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_weight="1"
                android:text="@string/share" />

            <ImageView
                android:id="@+id/icon_share_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_dot"
                android:contentDescription="@string/image_string"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>