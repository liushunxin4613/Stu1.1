<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/base_blue_light"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/user_IV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/default_user"
            android:contentDescription="@string/image_string" >

            <ImageButton
                android:id="@+id/user_imgBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_user_selector"
                android:contentDescription="@string/image_string" />
        </RelativeLayout>

        <TextView
            android:id="@+id/user_name_TV"
            style="@style/mid_white_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/user_IV"
            android:layout_toRightOf="@id/user_IV"
            android:text="@string/fragment_me_default_name" />

        <TextView
            android:id="@+id/user_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_name_TV"
            android:layout_alignStart="@+id/user_name_TV"
            android:layout_below="@+id/user_name_TV"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/fragment_me_welcome_TV"
            android:textColor="@drawable/text_white_selector"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/container_padding_large" >

        <View
            style="@style/item_line_style"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <RelativeLayout
            android:id="@+id/me_item_userInfo"
            style="@style/item_style"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeightSmall" >

            <TextView
                style="@style/mid_black_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:text="@string/fragment_me_Personal_information_BT" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/info_more"
                android:contentDescription="@string/image_string" />
        </RelativeLayout>

        <View
            style="@style/item_line_style"
            android:layout_width="match_parent"
            android:layout_height="1px" />
<RelativeLayout
            android:id="@+id/me_item_identificate"
            style="@style/item_style"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeightSmall" >

            <TextView
                style="@style/mid_black_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:text="@string/fragment_me_publisher_authentication_BT" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/info_more"
                android:contentDescription="@string/image_string" />
        </RelativeLayout>

        <View
            style="@style/item_line_style"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        
        

        <RelativeLayout
            android:id="@+id/me_item_discount"
            style="@style/item_style"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeightSmall" >

            <TextView
                style="@style/mid_black_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:text="@string/fragment_me_my_Coupon_BT" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/info_more"
                android:contentDescription="@string/image_string" />
        </RelativeLayout>

        <View
            android:id="@+id/View_me_item_discount"
            style="@style/item_line_style"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <RelativeLayout
            android:id="@+id/me_item_exist"
            style="@style/item_style"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeightSmall" >

            <TextView
                style="@style/mid_black_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:text="@string/fragment_me_exist" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/info_more"
                android:contentDescription="@string/image_string" />
        </RelativeLayout>

        <View
            android:id="@+id/me_item_line_5"
            style="@style/item_line_style"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </LinearLayout>

</LinearLayout>