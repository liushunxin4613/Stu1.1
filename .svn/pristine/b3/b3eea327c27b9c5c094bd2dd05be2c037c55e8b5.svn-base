<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <com.fengyang.customLib.NetworkImageView
        android:id="@+id/item_second_collect_img"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="1dp"
        android:background="@drawable/default_img"
        android:contentDescription="@string/image_string" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginStart="@dimen/view_margin"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_second_collect_name"
            style="@style/big_black_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_second_collect_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_second_collect_info"
            style="@style/small_gray_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/item_second_collect_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin"
        android:background="@drawable/collect_button_selector"
        android:button="@null"
        android:checked="true"
        android:contentDescription="@string/image_string"
        android:focusable="false" />

</LinearLayout>