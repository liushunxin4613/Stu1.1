<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.fengyang.customLib.NetworkImageView
        android:id="@+id/item_second_history_img"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="1dp"
        android:background="@drawable/default_img"
        android:contentDescription="@string/image_string" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginStart="@dimen/view_margin"
        android:gravity="start|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_second_history_name"
            style="@style/big_black_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_second_history_price"
            style="@style/mid_black_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_second_history_info"
            style="@style/small_gray_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>