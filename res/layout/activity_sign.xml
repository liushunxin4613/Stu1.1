<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true" >

    <ImageView
        android:id="@+id/sign_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@anim/sign_anim" />

    <TextView
        android:id="@+id/sign_tv"
        style="@style/big_black_textstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_image"
        android:layout_centerHorizontal="true"
        android:text="@string/signtv" />

    <Button
        android:id="@+id/sign_bt"
        style="@style/big_white_textstyle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_red_selector"
        android:onClick="onClick"
        android:text="@string/signbt" />

</RelativeLayout>